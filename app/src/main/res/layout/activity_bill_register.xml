<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_register"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/welcome_return"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="注册"
        android:layout_alignTop="@+id/button_register"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textview_register1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="邮箱号"
        android:textColor="@color/black"
        android:layout_alignLeft="@+id/relativelayout_register"
        android:layout_above="@+id/relativelayout_register1"
        android:layout_marginBottom="8dp"
        />

    <RelativeLayout
        android:id="@+id/relativelayout_register1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/register_kk"
        android:layout_above="@id/textview_register2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/edittext_register1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入邮箱"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textview_register2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="密码"
        android:textColor="@color/black"
        android:layout_above="@id/relativelayout_register"
        android:layout_marginBottom="8dp"
        android:layout_alignLeft="@+id/relativelayout_register"
        />


    <RelativeLayout
        android:id="@+id/relativelayout_register"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/register_kk"
        android:layout_above="@id/textview_register3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <EditText
            android:id="@+id/edittext_register2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"/>
        
        <CheckBox
            android:id="@+id/checkbox_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/check_selector"
            android:layout_toRightOf="@id/edittext_register2"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/textview_register3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="验证码"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/relativelayout_register"
        />

    <RelativeLayout
        android:id="@+id/relativelayout_register3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/register_kk"
        android:layout_below="@id/textview_register3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/edittext_register3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/edittext_register3"
            android:text="获取验证码"
            android:gravity="center"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome_register"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/relativelayout_register3"
        android:layout_marginTop="100dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            />

    </RelativeLayout>

</RelativeLayout>