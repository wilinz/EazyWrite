<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.eazywrite.app.ui.bill.fragment.InputViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:maxLength="8"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:textSize="23sp"
            android:id="@+id/money"></TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:background="#F6F7F9"
                android:layout_height="wrap_content"
                android:text="备注："
                android:singleLine="true"
                android:id="@+id/beiZhu"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="点击写备注..."
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"></EditText>
        </androidx.cardview.widget.CardView>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="#E8E8E8"></View>

            <TableRow>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:id="@+id/seven"
                    android:text="7"
                    android:gravity="center"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:id="@+id/eight"
                    android:text="8"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/nine"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:text="9"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:id="@+id/date"
                    android:layout_height="60dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/icon_family_calendar"></ImageView>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:gravity="center"
                        android:text="今天"></TextView>
                </LinearLayout>


                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>
            </TableRow>

            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="#E8E8E8"></View>

            <TableRow>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:id="@+id/four"
                    android:text="4"
                    android:gravity="center"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/five"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:text="5"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/six"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:text="6"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/and"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:text="+"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>
            </TableRow>

            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="#E8E8E8"></View>

            <TableRow>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/one"
                    android:layout_height="60dp"
                    android:text="1"
                    android:gravity="center"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/two"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:text="2"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/three"
                    android:layout_height="60dp"
                    android:text="3"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/sub"
                    android:layout_height="60dp"
                    android:text="-"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>
            </TableRow>

            <View
                android:layout_height="0.5dp"
                android:background="#E8E8E8"
                android:layout_width="match_parent"></View>

            <TableRow>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:text="."
                    android:id="@+id/dot"
                    android:gravity="center"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/zero"
                    android:layout_height="60dp"
                    android:text="0"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <RelativeLayout
                    android:id="@+id/delete"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/keyboard_view_delete_icon"
                        android:gravity="center"
                        android:text=""></ImageView>

                </RelativeLayout>


                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>

                <TextView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#FCBD1A"
                    android:layout_height="60dp"
                    android:id="@+id/finish"
                    android:text="完成"></TextView>

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:background="#E8E8E8"></View>
            </TableRow>

            <View
                android:layout_height="0.5dp"
                android:background="#E8E8E8"
                android:layout_width="match_parent"></View>
        </TableLayout>

    </LinearLayout>
</layout>