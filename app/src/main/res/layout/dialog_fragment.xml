<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/money">
    </TextView>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#E8E8E8"
            ></View>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="7"
                android:gravity="center"
                ></TextView>

            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="8"
                ></TextView>
            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="9"
                ></TextView>
            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>
            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="4"
                ></TextView>
        </TableRow>

        <View android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#E8E8E8"
            ></View>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="4"
                android:gravity="center"
                ></TextView>
            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="5"
                ></TextView>
            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="6"
                ></TextView>
            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="+"
                ></TextView>
        </TableRow>

        <View android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="#E8E8E8"
            ></View>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                ></TextView>
            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="2"
                ></TextView>
            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="3"
                ></TextView>
            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="-"
                ></TextView>
        </TableRow>

        <View android:layout_height="0.5dp"
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            ></View>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="."
                android:gravity="center"
                ></TextView>
            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="0"
                ></TextView>
            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="×"></TextView>

            <View android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="#E8E8E8"
                ></View>
            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="完成"
                ></TextView>
        </TableRow>

        <View android:layout_height="0.5dp"
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            ></View>
    </TableLayout>

</LinearLayout>